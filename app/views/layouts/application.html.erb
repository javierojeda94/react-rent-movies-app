<!DOCTYPE html>
<html>
  <head>
    <title>ReactMoviesApp</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'global-bundle' %>
    <%= javascript_pack_tag "#{controller_name}-bundle" %>
  </head>

  <body class="<%= controller_name.titleize %>">
    <%= react_component('FlashMessages', props: { error: flash[:error],
                                                  success: flash[:success],
                                                  info: flash[:info] }) %>
    <% if user_signed_in? %>
      <%= react_component('Header', props: { logOutUrl: destroy_user_session_path }) %>
      <div class="container">
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
