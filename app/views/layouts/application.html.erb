<!DOCTYPE html>
<html>
  <head>
    <title>ReactMoviesApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'global-bundle' %>
    <%= javascript_pack_tag "#{controller_name}-bundle" %>
  </head>

  <body class="<%= controller_name.titleize %>">
    <%= react_component('FlashMessages', props: { error: flash[:error],
                                                  success: flash[:success],
                                                  info: flash[:info] }) %>
    <%= yield %>
  </body>
</html>
